	<EntityComponents>
		<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
			<Id>
				<TypeId>Inventory</TypeId>
				<SubtypeId>APS-Behavior-D-0-0</SubtypeId>
			</Id>
			<Description>
				[RivalAI Behavior]

				[BehaviorName:Hunter]

				[AutopilotData:APS-Autopilot-D-0-0-A]
				[SecondaryAutopilotData:APS-Autopilot-D-0-0-B]

				[TargetData:APS-Target-D-0-0]

				[EngageOnTargetLineOfSight:true]
				[EngageOnWeaponActivation:true]

				[WeaponSystem:APS-Weapons-D-0-0]

				[Triggers:APS-Trigger-Remote-Control-Health]
				[Triggers:APS-Trigger-Retreat-No-Weapon]
				[Triggers:APS-Trigger-Compromised]
			</Description>
		</EntityComponent>

		<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
			<Id>
				<TypeId>Inventory</TypeId>
				<SubtypeId>APS-Autopilot-D-0-0-A</SubtypeId>
			</Id>
			<Description>
				[RivalAI Autopilot]

				[WaypointTolerance:25]
				[IdealMinSpeed:10]
				[IdealMaxSpeed:20]
				[MaxSpeedTolerance:5]
				[SlowDownOnWaypointApproach:true]
				[ExtraSlowDownDistance:150]
